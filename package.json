  },
  "dependencies": {
    "@ava/babel-preset-stage-4": "^1.0.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "pf-perlin": "^1.0.5",
    "serve": "^5.1.5",
    "three": "^0.85.2",
    "webpack": "^2.5.1"
  },
  "now": {
    "alias": "the-planets"
  },
  "xo": {
